{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
"include": [
    "./scripts/**/*",
    "./test/**/*", 
    "./ignition/**/*",
    "./config/**/*"  // âœ… Aggiungi questa linea
  ],
  "exclude": ["node_modules"]
}
